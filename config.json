{
  "language": "ja",
  "instrument_pool": [
    "ヴァイオリン",
    "ビオラ",
    "チェロ",
    "フルート"
  ],
  "permissions": {
    "claude": {
      "mode": "bypassPermissions",
      "add_dirs": []
    },
    "codex": {
      "sandbox": "danger-full-access",
      "approval": "never",
      "add_dirs": []
    },
    "gemini": {
      "add_dirs": []
    }
  },
  "rewriter": {
    "cmd": [
      "claude",
      "-p",
      "--system-prompt",
      "CLAUDE.md",
      "{prompt}"
    ],
    "timeout_sec": 600
  },
  "concertmaster": {
    "cmd": [
      "claude",
      "-p",
      "--tools",
      "",
      "--system-prompt",
      "AGENT.md",
      "{prompt}"
    ],
    "timeout_sec": 600
  },
  "performer": {
    "cmd": [
      "gemini",
      "-p"
    ],
    "timeout_sec": 600
  },
  "advisor": {
    "cmd": [
      "codex",
      "exec",
      "--skip-git-repo-check"
    ],
    "timeout_sec": 300,
    "enabled": false
  },
  "max_turns_performer": 3,
  "mix_with_conductor": true,
  "token_management": {
    "max_tokens": 200000,
    "warning_threshold": 0.75,
    "compact_threshold": 0.85,
    "max_compact_attempts": 3
  },
  "ssh_remote": {
    "enabled": false,
    "host": "",
    "user": "",
    "port": 22,
    "key_file": "~/.ssh/id_ed25519",
    "remote_path": "",
    "local_mount": "~/mnt/remote_project",
    "mount_options": ["reconnect", "ServerAliveInterval=15", "ServerAliveCountMax=3"],
    "fallback_mode": "rsync",
    "auto_add_dirs": true,
    "rsync_options": {
      "sync_before": true,
      "sync_after": true,
      "exclude": [".git", "node_modules", "__pycache__"]
    },
    "reviewer": {
      "enabled": false,
      "cmd": ["codex", "exec", "--skip-git-repo-check"],
      "timeout_sec": 300,
      "max_review_rounds": 3,
      "review_pre_execution": true,
      "review_post_execution": true
    }
  }
}
